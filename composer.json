{
    "name": "chuoke/rmb-capital",
    "description": "阿拉伯数字金额转为汉字大写",
    "keywords": [
        "人民币",
        "大写",
        "汉字金额"
    ],
    "homepage": "https://github.com/chuoke/rmb-capital",
    "license": "MIT",
    "authors": [
        {
            "name": "chuoke",
            "email": "chuokechungyoung@gmail.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^7.0|^8.0"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^2.17",
        "phpunit/phpunit": "^9.5",
        "vimeo/psalm": "^4.3"
    },
    "autoload": {
        "psr-4": {
            "Chuoke\\RmbCapital\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Chuoke\\RmbCapital\\Tests\\": "tests"
        }
    },
    "scripts": {
        "psalm": "vendor/bin/psalm",
        "test": "vendor/bin/phpunit",
        "test-coverage": "vendor/bin/phpunit --coverage-html coverage",
        "format": "vendor/bin/php-cs-fixer fix --allow-risky=yes"
    },
    "config": {
        "sort-packages": true
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
